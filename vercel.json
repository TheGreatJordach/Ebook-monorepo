{
  "version": 2,
  "projects": {
    "frontend": {
      "root": "frontend",
      "buildCommand": "npx nx build frontend",
      "outputDirectory": "dist/apps/frontend"
    },
    "backend": {
      "root": "backend",
      "buildCommand": "npx nx build backend",
      "outputDirectory": "dist/apps/backend"
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/api/$1", "continue": true },
    { "src": "/api/(.*)", "dest": "dist/apps/backend/$1" }
  ]
}
