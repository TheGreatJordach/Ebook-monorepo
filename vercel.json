{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/frontend"
      }
    },
    {
      "src": "backend/**/*",
      "use": "@vercel/node",
      "config": {
        "distDir": "dist/apps/backend"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/dist/apps/backend/$1" },
    { "src": "/(.*)", "dest": "frontend/dist/apps/frontend/$1" }
  ]
}
